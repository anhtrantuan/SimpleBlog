<%= form_for(@entry) do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</div>
	<div class="field">
		<%= f.label :categories %><br />
		<%= hidden_field_tag "entry[category_ids][]", nil %>
<% if @categories %>
	<% @categories.each do |category| %>
		<%= check_box_tag "entry[category_ids][]", category.id, @entry.categories.include?(category), id: dom_id(category) %>
		<%= label_tag dom_id(category), category.name %><br />
	<% end %>
<% end %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>