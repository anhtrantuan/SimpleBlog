<h1>Categories</h1>

<table border="1" cellpadding="5px">
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th></th>
	<% if current_user %>
		<th></th>
		<th></th>
	<% end %>
	</tr>

<% @categories.each do |category| %>
	<tr id="<%= dom_id(category) %>">
		<td><%= category.name %></td>
		<td><%= category.description %></td>
		<td><%= link_to "View", category %></td>
	<% if current_user %>
		<td><%= link_to "Edit", edit_category_path(category) %></td>
		<td><%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, remote: true %></td>
	<% end %>
	</tr>
<% end %>
</table>

<br />

<%= link_to "Create", new_category_path %>